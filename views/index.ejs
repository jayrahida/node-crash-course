<html lang="en">
    <%- include('./partials/head.ejs') %>
    <body>
        
        <%- include('./partials/nav.ejs') %>

        <div class="blogs content">
            <a href="/"><h1>Blog Ninja</h1></a>
            <h2>All Blogs</h2>

            <% if(blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>

                    <h3 class="title"><%= blog.title %></h3>
                    <p class="snippet"><%= blog.snippet %></p>

                <% }) %>
                
            <% } %>

        </div>
        <%- include('./partials/footer.ejs') %>
    </body>
</html>